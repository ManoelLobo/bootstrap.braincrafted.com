                                        <input type="text" class="search-query span2" placeholder="Search">
                                    </form>
                                    {{ knp_menu_render('BcBootstrapDemoBundle:Builder:responsiveNavbarRight', {'nav_type': 'navbar', 'pull': 'right'}) }}
